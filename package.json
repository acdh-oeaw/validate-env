{
	"name": "@acdh-oeaw/validate-env",
	"version": "0.3.0",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/acdh-oeaw/validate-env"
	},
	"type": "module",
	"main": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./astro": "./dist/astro.js",
		"./next": "./dist/next.js",
		"./runtime": "./dist/runtime.js"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"engines": {
		"node": "^22 || ^24"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.28.2",
	"scripts": {
		"build": "tsdown",
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"ci:version": "changeset version && prettier \"**/CHANGELOG.md\" --write",
		"format:check": "prettier . --cache --check",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "eslint . --cache",
		"lint:fix": "pnpm run lint:check --fix",
		"prepare": "run-s setup",
		"prepublishOnly": "run-s validate build",
		"setup": "is-ci || simple-git-hooks",
		"test": "uvu -r tsm",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.3.4"
	},
	"peerDependencies": {
		"typescript": ">=5.4"
	},
	"devDependencies": {
		"@acdh-oeaw/commitlint-config": "^2.0.0",
		"@acdh-oeaw/eslint-config": "^2.0.9",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/tsconfig-lib": "^1.3.0",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.5",
		"@commitlint/cli": "^19.8.1",
		"eslint": "^9.33.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"globals": "^16.3.0",
		"is-ci": "^4.1.0",
		"lint-staged": "^16.1.5",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"simple-git-hooks": "^2.13.1",
		"tsdown": "^0.13.5",
		"tsm": "^2.3.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.1",
		"uvu": "^0.5.6",
		"valibot": "^1.1.0"
	},
	"commitlint": {
		"extends": "@acdh-oeaw/commitlint-config"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
